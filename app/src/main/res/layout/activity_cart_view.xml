<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cart_listing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context="flo.org.campusmein.app.Home.cart.cartView"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        android:id="@+id/action_bar_cart_listings"
        layout="@layout/tab_action_bar"
        />

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/sixtyFourDp"
                    android:paddingRight="@dimen/sixtyFourDp"
                    android:layout_marginLeft="@dimen/thirtyTwoDP"
                    android:layout_marginRight="@dimen/thirtyTwoDP"
                    android:layout_marginTop="@dimen/thirtyTwoDP"
                    android:src="@drawable/ic_empty_cart_layout"
                    />
                <Button
                    android:id="@+id/shopNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/let_s_shop_now"
                    android:textColor="@color/colorWhite"
                    android:padding="@dimen/sixteenDp"
                    android:minWidth="@dimen/zeroDp"
                    android:minHeight="@dimen/zeroDp"
                    android:background="@drawable/filled_background_rounded_rectangle_primary_color" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/error_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixteenDp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_signal_cellular_connected_no_internet_0_bar_black_24dp"
                android:layout_margin="@dimen/sixteenDp"
                android:tint="@android:color/tertiary_text_light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/eightDP"
                android:layout_margin="@dimen/eightDP"
                android:textColor="@android:color/tertiary_text_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="@string/NetworkError"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sixtyFourDp">

        <LinearLayout
            android:id="@+id/cartListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/priceView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyFourDp"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:gravity="center"
        android:background="@color/colorlightPrimary"
        >
        <ScrollView
            android:layout_width="@dimen/zeroDp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:paddingTop="@dimen/tab_indicator_height"
            android:paddingBottom="@dimen/tab_indicator_height"
            android:paddingLeft="@dimen/eightDP"/>
            <!--android:paddingBottom="@dimen/tab_indicator_height"-->
            <!--android:layout_weight="1"-->
            <TextView
                android:id="@+id/totalItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="@dimen/eightDP"
                android:paddingTop="@dimen/tab_indicator_height"
                android:paddingBottom="@dimen/tab_indicator_height" />
        </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/continueChkOut"
            android:layout_width="@dimen/zeroDp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/eightDP"
            android:background="@drawable/filled_background_rounded_rectangle_primary_color"
            android:textColor="@color/colorBackground"
            android:text="@string/btn_continue"
            />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
