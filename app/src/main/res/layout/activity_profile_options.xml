<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context="flo.org.exchange.app.Login.profile_options"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include
        android:id="@+id/action_bar_profile_options"
        layout="@layout/tab_action_bar"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >


        <LinearLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/sixteenDp"
            android:layout_gravity="center"
            android:visibility="visible"
            >
            <com.pkmmte.view.CircularImageView
                android:id="@+id/profile_img_profile_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_default_avatar"
                app:border="true"
                app:borderWidth="2dp"
                app:border_color="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/person_name_profile_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/sixteenDp"
                android:textColor="@android:color/primary_text_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
            <TextView
                android:id="@+id/person_college_profile_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eightDP"
                android:textColor="@android:color/secondary_text_light"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/order_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="@dimen/fourDP">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/thirtyTwoDP"
                        android:layout_height="@dimen/thirtyTwoDP"
                        android:src="@drawable/ic_inbox_black_24dp"
                        android:layout_marginTop="@dimen/sixteenDp"
                        android:layout_marginBottom="@dimen/sixteenDp"
                        android:layout_marginLeft="@dimen/thirtyTwoDP"
                        android:layout_marginRight="@dimen/thirtyTwoDP"
                        android:tint="@android:color/tertiary_text_light"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/order_history"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_width="@dimen/thirtyTwoDP"
                        android:layout_height="@dimen/thirtyTwoDP"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center|right"
                        android:layout_marginTop="@dimen/sixteenDp"
                        android:layout_marginBottom="@dimen/sixteenDp"
                        android:layout_marginLeft="@dimen/thirtyTwoDP"
                        android:layout_marginRight="@dimen/thirtyTwoDP"
                        android:tint="@android:color/tertiary_text_light"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/RateApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="@dimen/fourDP">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/thirtyTwoDP"
                        android:layout_height="@dimen/thirtyTwoDP"
                        android:src="@drawable/ic_star_border_black_24dp"
                        android:layout_marginTop="@dimen/sixteenDp"
                        android:layout_marginBottom="@dimen/sixteenDp"
                        android:layout_marginLeft="@dimen/thirtyTwoDP"
                        android:layout_marginRight="@dimen/thirtyTwoDP"
                        android:tint="@android:color/tertiary_text_light"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_app"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_width="@dimen/thirtyTwoDP"
                        android:layout_height="@dimen/thirtyTwoDP"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/sixteenDp"
                        android:layout_marginBottom="@dimen/sixteenDp"
                        android:layout_marginLeft="@dimen/thirtyTwoDP"
                        android:layout_marginRight="@dimen/thirtyTwoDP"
                        android:tint="@android:color/tertiary_text_light"/>

                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/cardview_light_background"
                    android:layout_marginTop="@dimen/fourDP">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/thirtyTwoDP"
                        android:layout_height="@dimen/thirtyTwoDP"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_marginTop="@dimen/sixteenDp"
                        android:layout_marginBottom="@dimen/sixteenDp"
                        android:layout_marginLeft="@dimen/thirtyTwoDP"
                        android:layout_marginRight="@dimen/thirtyTwoDP"
                        android:tint="@android:color/tertiary_text_light"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_width="@dimen/thirtyTwoDP"
                        android:layout_height="@dimen/thirtyTwoDP"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/sixteenDp"
                        android:layout_marginBottom="@dimen/sixteenDp"
                        android:layout_marginLeft="@dimen/thirtyTwoDP"
                        android:layout_marginRight="@dimen/thirtyTwoDP"
                        android:tint="@android:color/tertiary_text_light"/>

                        </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sixteenDp"
                    android:background="@drawable/red_button"
                    android:text="@string/sign_out"
                    android:textColor="@color/colorCard"
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    />
            </LinearLayout>



     </LinearLayout>

    </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
